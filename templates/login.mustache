{{!
    @template theme_pimenko/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "htmlattributes": "HTML attributes",
            "bodyattributes": "HTML bodyattributes",
            "standard_top_of_body_html": "The standard tags (typically skip links) that should be output just inside",
            "main_content": "<h1>Headers keep HTML validators happy</h1>",
            "logintextstartwrapper": "Some HTML content",
            "logintextboxtop": "Some HTML content",
            "logintextboxbottom": "Some HTML content"
        }
    }
}}

{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
    {{> theme_boost/head }}

    <body {{{ bodyattributes }}}>
    {{> core/local/toast/wrapper}}
        <div id="page-wrapper" class="d-print-block">
            {{{ output.standard_top_of_body_html }}}
            <!-- Default navbar. -->
            {{> theme_boost/navbar }}
            <!-- Default nav-drawer. -->
            {{> theme_boost/nav-drawer }}
            <div class="container outercont">
                <div id="page-content" class="row">
                    <section id="region-main" class="col-12">
                        <div class="row justify-content-center">
                            <div class="col-xl-6 col-sm-8 ">
                                <div class="card">
                                    <div class="card-block textbox">
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{{maincontent}}}
                        <div class="my-1 my-sm-5"></div>
                        <div class="row justify-content-center">
                            <div class="col-xl-6 col-sm-8">
                                <div class="card">
                                    <div class="card-block textbox">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </section>
                </div>
            </div>
            <!-- Default footer. -->
            {{> theme_boost/footer }}
        </div>
    </body>
</html>
{{#js}}
    require(['theme_boost/loader']);
    require(['theme_boost/drawer'], function(mod) {
        mod.init();
    });
{{/js}}
