<div class="checkbox d-flex flex-row">
    <label id="completion-block" data-toggle="tooltip" title="{{tooltiptext}}">
        <input type="checkbox" {{status}} class="{{class}}" value="" data-mod="{{modid}}"
               data-completionstate="{{state}}"
               data-modulename="{{{modname}}}"
               data-id="{{modid}}"
               data-image="{{completionicon}}"
               data-changetext="{{{changetext}}}"
               data-msg="">
            {{#displayicon}}
                {{#pix}} t/check {{/pix}}
            {{/displayicon}}
    </label>
</div>
